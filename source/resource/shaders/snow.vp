uniform float uTime;

varying float vTime;
varying vec3 vNormal;

void main() {

	vTime = uTime;
	vNormal = normalMatrix * vec3(normal);

	vec3 pos = position;
	pos += vNormal * sin(vTime + pos.x*0.3) * 1.0;
	
  	gl_Position = projectionMatrix *
                modelViewMatrix *
                vec4(pos,1.0);
}